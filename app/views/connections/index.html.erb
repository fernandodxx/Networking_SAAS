<h2 class="text-xl font-bold mb-4">🤝 Suas Conexões</h2>

<ul class="space-y-2">
  <% @connections.each do |connection| %>
    <li class="p-2 border-b flex justify-between">
      <span><%= connection.connected_user.name %></span>
      <%= link_to "Desconectar", connection_path(connection), method: :delete, class: "text-red-500" %>
    </li>
  <% end %>
</ul>
