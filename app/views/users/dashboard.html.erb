<div class="container mx-auto p-6 grid grid-cols-3 gap-4">

  <!-- Coluna 1: ConexÃµes -->
  <div class="bg-white p-4 rounded shadow">
    <h2 class="text-xl font-semibold mb-2">Suas ConexÃµes</h2>
    <ul>
      <% current_user.connected_users.each do |user| %>
        <li class="p-2 border-b flex justify-between">
          <%= user.email %>
          <%= link_to "Remover", disconnect_path(user), method: :delete, class: "text-red-500" %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Coluna 2: Gerenciar Interesses -->
  <div class="bg-white p-4 rounded shadow">
    <h2 class="text-xl font-semibold mb-2">Seus Interesses</h2>
    <ul>
      <% current_user.interests.each do |interest| %>
        <li class="p-2 border-b flex justify-between">
          <%= interest.name %>
          <%= link_to "Remover", interest_path(interest), method: :delete, class: "text-red-500" %>

        </li>
      <% end %>
    </ul>
    <%= form_with url: interests_path, method: :post do |f| %>
      <%= f.text_field :name, placeholder: "Novo Interesse", class: "p-2 border rounded w-full" %>
      <%= f.submit "Adicionar", class: "mt-2 bg-blue-500 text-white px-4 py-2 rounded" %>
    <% end %>
  </div>

  <!-- Coluna 3: SugestÃµes de ConexÃµes -->
  <div id="suggestions">
    <%= turbo_frame_tag "suggestions" do %>
      <ul>
        <% @suggested_users.each do |user| %>
          <li class="p-2 border-b flex justify-between">
            <%= user.email %>
            <%= link_to "Conectar", send_request_path(user), method: :post, class: "text-green-500", data: { turbo_stream: true } %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <h2 class="text-lg font-semibold">ðŸ”” NotificaÃ§Ãµes</h2>
  <ul>
    <% current_user.notifications.where(read: false).each do |notification| %>
      <li class="p-2 border-b">
        <%= notification.message %>
        <%= link_to "Marcar como lida", mark_notification_path(notification), method: :patch, class: "text-blue-500" %>
      </li>
    <% end %>
  </ul>
</div>
